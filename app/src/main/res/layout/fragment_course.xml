<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_refresh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/all_course_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/course_bg1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <Spinner
                        android:id="@+id/spinner_week"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="120dp"
                        android:background="@drawable/shape_drop_down_normal"
                        android:dropDownSelector="@color/mine_yellow"
                        android:gravity="right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:background="#80ffffff"
                android:padding="2dp">

                <TextView
                    android:layout_width="30.0dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day1_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周一"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day2_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周二"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day3_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周三"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day4_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周四"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day5_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周五"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day6_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周六"
                    android:textColor="#ff000000" />

                <TextView
                    android:id="@+id/day0_of_week"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="周日"
                    android:textColor="#ff000000" />
            </LinearLayout>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/left_view"
                    android:layout_width="30.0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/monday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/tuesday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/wednesday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/thursday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/friday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/saturday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:id="@+id/sunday"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1.0"
                    android:orientation="vertical" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>